@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <form>
        <div class="row mb-3">
            <label for="inputEmail" class="col-sm-2 col-form-label">Amount</label>
            <div class="col-sm-10">
                <input type="number" min="1" class="form-control" name="amountFrom" id="amountFrom" required>
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputPassword" class="col-sm-2 col-form-label">Currency</label>
            <div class="col-sm-10">
                <select class="js-example-basic-single form-control" id="currencyFrom" name="currencyFrom">
                </select>
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputPassword" class="col-sm-2 col-form-label">Convert To</label>
            <div class="col-sm-10">
                <select class="js-example-basic-single form-control" id="currencyTo" name="currencyTo">
                </select>

            </div>
        </div>
        <div class="row mb-3">
            <label for="inputPassword" class="col-sm-2 col-form-label">Coverted</label>
            <div class="col-sm-10">
                <h4 id="amountTo" name="amountTo"></h4>
            </div>
        </div>
        <input type="hidden" id="conversion_rate" name="conversion_rate">
        <input type="hidden" id="conversion_result" name="conversion_result">

        <div class="row">
            <div class="col-sm-10 offset-sm-2">
                <button type="button" class="btn btn-primary" onclick="convert();">Convert</button>
            </div>
        </div>
    </form>
</div>

@section Scripts
{
<script src="~/js/site.js"></script>

}