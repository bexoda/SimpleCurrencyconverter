@model IEnumerable<Transaction>
@{
    ViewData["Title"] = "History";
}
<link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<div class="container">
    <br />
    <div style="width:90%; margin:0 auto;">
        <table id="History" class="table table-striped table-bordered dt-responsive nowrap" width="100%"
               cellspacing="0">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.transactionId)</th>
                    <th>@Html.DisplayNameFor(model => model.amountFrom)</th>
                    <th>@Html.DisplayNameFor(model => model.currencyFrom)</th>
                    <th>@Html.DisplayNameFor(model => model.amountTo)</th>
                    <th>@Html.DisplayNameFor(model => model.currencyTo)</th>
                    <th>@Html.DisplayNameFor(model => model.rate)</th>
                    <th>@Html.DisplayNameFor(model => model.createdDate)</th>

                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts
{
<script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
<script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
<script>
    $(document).ready(function () {
        $('#History').dataTable({
            "processing": true,
            "serverSide": true,
            "filter": true,
            "ajax": {
                "url": "/api/transaction",
                "type": "GET",
                "datatype": "json",
                "dataSrc": '[]'
            },
            "columnDefs": [{
                "targets": [0],
                "visible": true,
                "searchable": true
            }],
            "columns": [
                { "data": "transactionId", "name": "Id", "autoWidth": true },
                { "data": "amountFrom", "name": "First Name", "autoWidth": true },
                { "data": "currencyFrom", "name": "Last Name", "autoWidth": true },
                { "data": "amountTo", "name": "Country", "autoWidth": true },
                { "data": "currencyTo", "name": "Email", "autoWidth": true },
                { "data": "rate", "name": "Date Of Birth", "autoWidth": true },
                { "data": "createdDate", "name": "Date Of Birth", "autoWidth": true },

            ]
        });
    });
</script>
}